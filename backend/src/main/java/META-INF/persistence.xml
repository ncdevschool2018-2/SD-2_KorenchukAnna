<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.netcracker.backend.entity.AccountsEntity</class>
        <class>com.netcracker.backend.entity.RoliesEntity</class>
        <class>com.netcracker.backend.entity.RoleEntity</class>
        <class>com.netcracker.backend.entity.AccountsEntity</class>
        <class>com.netcracker.backend.entity.CommentsEntity</class>
        <class>com.netcracker.backend.entity.PrioritiesEntity</class>
        <class>com.netcracker.backend.entity.ProjectsEntity</class>
        <class>com.netcracker.backend.entity.RolesEntity</class>
        <class>com.netcracker.backend.entity.StatusEntity</class>
        <class>com.netcracker.backend.entity.TasksEntity</class>
        <class>com.netcracker.backend.entity.UsersEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/management"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
